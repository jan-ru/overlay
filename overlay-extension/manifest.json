{
  "manifest_version": 3,
  "name": "Overlay Toggle",
  "version": "1.1",
  "icons": {
    "16": "ico/sigma_16.png",
    "32": "ico/sigma_32.png",
    "48": "ico/sigma_48.png",
    "128": "ico/sigma_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Overlay Options"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://rooster.hva.nl/*"],
  "web_accessible_resources": [
    {
      "resources": ["settings.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
